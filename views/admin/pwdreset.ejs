<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/admin.css" />
<link rel="stylesheet" href="/css/login.css" />
<script src="https://kit.fontawesome.com/766e633129.js" crossorigin="anonymous"></script>
</head>

<body>
  <main>
    <form class="form"  method="POST">
      <h1 class="h1">You can now reset your password</h1>
      <% if (errorMessage) { %>
        <div><p class="user-message user-message--error txt-misc"><%= errorMessage  %></p></div>
      <% } %>
        <div class="pwd-box">
            <input placeholder="enter new password" class="form__element input pwd" name="password"   type="password" required >
            <button type="button" class="eye-toggle"><i class="eye-icon fa-regular fa-eye"></i></button>
        </div>
        <div class="pwd-box">
             <input placeholder="confirm new password" class="form__element input pwd" name="checkPwd"   type="password" required >
            <button type="button" class="eye-toggle"><i class="eye-icon fa-regular fa-eye"></i></button>
        </div>
        <button class="form__element form__btn" type="submit">change password</button>
    </form>

  </main>
  <script src="/js/login.js"></script>

</body>

</html>