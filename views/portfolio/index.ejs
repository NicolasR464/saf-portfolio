          <a href="https://www.instagram.com/safwan_lekwibre/" target="_blank"><img src="./icons/insta.png" alt="insta logo" /></a>
        </li>
      </ul>
    </nav>
  </div>
  
  <section class="imgs">
    <% if (imgs.length > 0) { %>

    <% imgs.forEach((img, i ) =>{ %>
    <img class="img i<%= i %>" src="<%= img %>" alt="cinema still" />
    <% }) %>
    <% } %>
  </section>


  <script src="/js/index.js"></script>
